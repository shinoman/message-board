<% if @message.errors.present? %> <!-- errosに値が入っているか？（present?)を判断 -->
    <div class="alert alert-danger">
        <%= alert %>
        <ul>
            <% @message.errors.full_messages.each do |full_message| %><!-- full_messagesでバリデーションのエラーメッセージの配列を取得してerrorメッセージの数だけ繰り返す-->
                <li>
                    <%= full_message %>
                </li>
            <% end %>
        </ul>
    </div>
<% end %>
<div class="panel panel-default">
    <div class="panel-heading">
        メッセージ一覧
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-8 board">
                <% @messages.reverse_each do |message| %> 
                    <span class="label label-info"><%= message.name %></span><spn class="age"><%= message.age %>歳</spn><span class="time">:<%= message.created_at %></span>
                    <p style="float:right; display:inline;">
                        (
                        <%= link_to "edit" , edit_message_path(message) %>,
                        <%= link_to "destroy" , message , method: :delete, data: { :confirm => '削除します。よろしいですか?'} %>
                        )
                    </p>
                    <%= simple_format(message.body) %><!--simple_format()でタグ系も実行可能にしている-->
                <% end %>
            </div>
            <div class="col-md-4 input">
                <%= render "form" %>
            </div>
        </div>
    </div>
</div>


