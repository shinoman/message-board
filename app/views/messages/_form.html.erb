<%= form_for(@message, html:{class:"form-horizontal"}) do |f| %>
    <div class="form-group">
        <div class="col-md-9">
            <label class="control-label">名前：</label>
            <%= f.text_field :name, :placeholder=>"名前は２文字以上２５文字以内でお願いします。",class:"form-control" %>
        </div>
        <div class="col-md-3">
            <label class="control-label">年齢：</label>
            <%= f.text_field :age, :placeholder=>"0-150",class:"form-control" %>
        </div>
        
    </div>
    <label class="control-label">内容：</label>
    <%= f.text_area :body, class:"input_body form-control", :placeholder=>"内容は２文字以上でお願いします。改行も可能です。" %><br>
    <%= f.submit :class=>"btn btn-primary"%>
<% end %>